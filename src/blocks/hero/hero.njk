<section id="{{ hero.id }}" class="hero-section {{ hero.background }} position-relative pt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-4 fw-bold mb-4 {{ hero.title.color }}">{{ hero.title.text }}</h1>
                <p class="lead mb-5 {{ hero.subtitle.color }}">{{ hero.subtitle.text }}</p>
                <div class="d-flex flex-column flex-md-row gap-3 justify-content-center mb-5">
                    {% for cta in hero.cta %}
                        <a href="{{ cta.url }}" class="btn {{ cta.style }} btn-lg">{{ cta.text }}</a>
                    {% endfor %}
                </div>
                <div class="d-flex flex-column flex-sm-row gap-4 justify-content-center mb-5 text-center text-sm-start">
                    {% for highlight in hero.highlights %}
                    <div class="d-flex align-items-center gap-2 flex-sm-nowrap justify-content-center">
                        <i class="bi bi-{{ highlight.icon }}"></i>
                        <span class="text-nowrap">{{ highlight.text }}</span>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

