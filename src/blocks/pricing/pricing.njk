<section id="{{ pricing.id }}" class="pricing-section {{ pricing.background }} py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h2 class="display-5 fw-bold mb-4 {{ pricing.title.color }}">{{ pricing.title.text }}</h2>
                <p class="lead mb-5 {{ pricing.subtitle.color }}">{{ pricing.subtitle.text }}</p>
            </div>
        </div>

        <div class="row g-4 justify-content-center">
            {% for plan in pricing.plans %}
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm{% if plan.featured %} border-primary border-2{% endif %} position-relative">
                        {% if plan.badge %}
                            <span class="position-absolute top-0 start-50 translate-middle badge border border-primary bg-white text-primary shadow-sm px-3 py-2">
                                {{ plan.badge }}
                            </span>
                        {% endif %}
                        <div class="card-header{% if plan.featured %} bg-primary text-white{% else %} bg-light{% endif %} text-center py-4">
                            <h3 class="mb-0">{{ plan.name }}</h3>
                        </div>
                        <div class="card-body d-flex flex-column text-center py-4">
                            <ul class="list-unstyled mb-4 text-start">
                                {% for feature in plan.features %}
                                    <li class="py-1">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>{{ feature }}
                                    </li>

                                    {% if loop.index == 1 and (plan.id == 'main' or plan.id == 'individual') %}
                                        <li class="py-1 text-center">
                                            <i class="bi bi-plus text-primary fs-4"></i>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                            <div class="mt-auto">
                                <span class="display-4 fw-bold">{{ plan.price | safe }}</span>
                                <span class="d-block text-muted">цена</span>
                            </div>
                            <div class="mt-3">
                                <a href="{{ plan.ctaLink }}" target="_blank"
                                   class="btn {% if plan.featured %}btn-primary{% else %}btn-outline-primary{% endif %} w-100">{{ plan.cta }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>