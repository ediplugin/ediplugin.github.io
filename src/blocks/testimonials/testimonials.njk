<section id="{{ testimonials.id }}" class="testimonials-section {{ testimonials.background }} py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h2 class="display-5 fw-bold mb-4 {{ testimonials.title.color }}">{{ testimonials.title.text }}</h2>
                <p class="lead mb-5 {{ testimonials.subtitle.color }}">{{ testimonials.subtitle.text | safe }}</p>
            </div>
        </div>

        <!-- Сетка отзывов -->
        <div class="row g-4">
            {% for testimonial in testimonials.testimonials %}
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="card h-100 shadow-sm">
    <div class="card-body d-flex flex-column">
        <div class="mb-3 d-flex justify-content-between align-items-center">
            <i class="bi bi-quote text-primary fs-1"></i>
            <div class="d-flex align-items-center">
                <div class="flex-shrink-0">
                    <img src="{{ testimonial.avatar }}" alt="{{ testimonial.author }}" class="rounded-circle" width="48" height="48">
                </div>
                <div class="flex-grow-1 ms-3">
                    <h6 class="mb-0"><a href="{{ testimonial.url }}" target="_blank" class="text-decoration-none text-dark">{{ testimonial.author }}</a></h6>

                    <!-- Рейтинг -->
                    <div class="mb-3">
                        {% for star in range(testimonial.rating) %}
                            <i class="bi bi-star-fill text-warning"></i>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Заголовок отзыва -->
        <h6 class="mb-3 fw-bold small">{{ testimonial.title }}</h6>

        <p class="mb-4 small">{{ testimonial.content }}</p>
    </div>
</div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>